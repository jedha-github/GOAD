### VARIABLES FROM GOAD AZ

variable "region" {
  type    = string
  default = "eu-west-1" # AWS region equivalent to "westeurope" in Azure
}

resource "aws_vpc" "main_vpc" {
  cidr_block = "192.168.0.0/16"

  tags = {
    Name = "goad-virtual-network"
  }
}

resource "aws_subnet" "main_subnet" {
  vpc_id                  = aws_vpc.main_vpc.id
  cidr_block              = "192.168.56.0/24"
  map_public_ip_on_launch = true

  tags = {
    Name = "goat-vm-subnet"
  }
}

variable "instance_type" {
  type    = string
  default = "t2.small" # AWS instance type roughly equivalent to "Standard_B2s" in Azure
}

variable "username" {
  type    = string
  default = "goadmin"
}

variable "password" {
  description = "Password of the windows virtual machine admin user"
  type        = string
}

variable "admin_username" {
  type    = string
  default = "goad"
}
