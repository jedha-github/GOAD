resource "tls_private_key" "ssh" {
  algorithm = "RSA"
  rsa_bits  = 4096
}

resource "aws_key_pair" "jumpbox_key" {
  key_name   = "ubuntu-jumpbox-key"
  public_key = tls_private_key.ssh.public_key_openssh
}

resource "aws_eip" "ubuntu_public_ip" {
  instance = aws_instance.jumpbox.id
}

resource "aws_network_interface" "ubuntu_jumbox_nic" {
  subnet_id       = aws_subnet.subnet.id
  private_ips     = ["192.168.56.100"]
  security_groups = [aws_security_group.example_sg.id] # Assuming you have a security group defined somewhere
}

resource "aws_instance" "jumpbox" {
  ami                         = data.aws_ami.ubuntu.id
  instance_type               = var.size
  subnet_id                   = aws_subnet.subnet.id
  key_name                    = aws_key_pair.jumpbox_key.key_name
  private_ip                  = "192.168.56.100"
  associate_public_ip_address = true

  network_interface {
    network_interface_id = aws_network_interface.ubuntu_jumbox_nic.id
    device_index         = 0
  }

  tags = {
    Name = "ubuntu-jumpbox"
  }

  provisioner "local-exec" {
    command = "echo '${tls_private_key.ssh.private_key_pem}' > ../ssh_keys/ubuntu-jumpbox.pem && chmod 600 ../ssh_keys/ubuntu-jumpbox.pem"
  }
}

# The `data.aws_ami.ubuntu` is used to fetch the appropriate AMI ID for the Ubuntu version
data "aws_ami" "ubuntu" {
  most_recent = true

  filter {
    name   = "name"
    values = ["ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*"] # Adjust this based on the exact naming convention for Ubuntu on AWS
  }

  owners = ["099720109477"] # Canonical's AWS account ID
}
